{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@mdns-listener/*": ["src/lib/*"],
      "@mdns-listener/types/*": ["src/types/*"]
    },
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/lib/**/*", "src/types/**/*", "**/*"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
