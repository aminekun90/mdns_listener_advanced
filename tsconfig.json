{
  "compilerOptions": {
    "target": "ES2022", // Modern JS target
    "module": "NodeNext", // ESM support
    "moduleResolution": "NodeNext", // Required for Node ESM
    "outDir": "dist",
    "declaration": true, // Generate .d.ts files
    "declarationMap": true, // Optional: map for debugging types
    "sourceMap": true, // Map for debugging JS
    "strict": true, // Enable all strict checks
    "esModuleInterop": true, // Default interop with commonjs
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Skip type checks of node_modules
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ] // Alias for imports
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "esm",
    "cjs",
    "umd",
    "types",
    "*.log",
    ".env",
    "tools"
  ]
}