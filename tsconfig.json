{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "baseUrl": ".",
    "paths": {
      "@mdns-listener/*": ["./src/*"],
      "*": ["./node_modules/*"]
    },
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*", "examples/**/*"]
}
