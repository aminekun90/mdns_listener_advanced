{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@mdns-listener/*": ["src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/types/**/*", "**/*"],
  "exclude": ["node_modules", "**/__tests__/*", "examples/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
