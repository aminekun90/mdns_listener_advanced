    "@vitest/coverage-v8": "^4.0.14",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin": "^1.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "src/**/*.{ts,js,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "mDNS",
    "Bonjour",
    ".local",
    "DNS",
    "Listener",
    "zeroconf",
    "multicast-dns",
    "network-discovery",
    "IoT"
  ],
  "publishConfig": {
    "access": "public"
  }
}